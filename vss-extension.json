{
    "manifestVersion": 1,
    "id": "invokebuild",
    "name": "Invoke-Build",
    "version": "1.0.0",
    "public": true,
    "publisher": "qetza",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tools for building with Invoke-Build.",
    "categories": [
        "Build and release"
    ],
    "tags": [
        "build",
        "invoke-build"  
    ],
    "links": {
        "learn": {
            "uri": "https://github.com/qetza/vsts-invokebuild-task#readme"
        },
        "support": {
            "uri": "https://github.com/qetza/vsts-invokebuild-task/issues"  
        }
    },
    "icons": {
        "default": "images/extension-icon.png"
    },
    "branding": {
        "color": "#EEEEEE",
        "theme": "light"
    },
    "screenshots": [
        {
            "path": "images/screenshot-01.png"
        }
    ],
    "content": {
        "details": {
            "path": "docs/extension-overview.md"
        },
        "license": {
            "path": "LICENSE.txt"
        }
    },
    "files": [
        {
            "path": "task"
        }
    ],
    "contributions": [
        {
            "id": "invokebuild-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "task"
            }
        }
    ]
}